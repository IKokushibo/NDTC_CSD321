import java.util.Scanner

fun main() {
    val scanner = Scanner(System.`in`)

    print("Enter a number (n): ")

    val n = scanner.nextInt()
    val sum = calculateSumOfMultiplesOfThreeOrFive(n)
    println("The sum of multiples of three or five from 1 to $n is: $sum")

    scanner.close()
}

fun calculateSumOfMultiplesOfThreeOrFive(n: Int): Int {
    var sum = 0
    for (i in 1..n) {
        if (i % 3 == 0 || i % 5 == 0) {
            sum += i
        }
    }
    return sum
}
